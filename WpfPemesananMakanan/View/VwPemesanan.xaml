        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPemesananMakanan.View"
        mc:Ignorable="d"
        Title="VwPemesanan" Height="768" Width="1366" WindowStartupLocation="CenterScreen" WindowState="Minimized" ResizeMode="NoResize">
