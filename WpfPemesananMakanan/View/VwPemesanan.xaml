                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridMenu" HorizontalAlignment="Left" Margin="0,0,0,351"/>
                </Grid>
            </TabItem>
            <TabItem Header="Minuman" FontSize="18" Width="130" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Snack" FontSize="18" Width="130" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Dessert" FontSize="18" Width="130" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Background="#FFE5E5E5" Margin="0,0,44,0">
                    <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="280" Margin="22,22,0,0" Stroke="Black" VerticalAlignment="Top" Width="210"/>
                    <Image x:Name="imgMenu" HorizontalAlignment="Left" Height="195" Margin="22,23,0,0" VerticalAlignment="Top" Width="208"/>
                    <Label x:Name="lblNmMenu" Content="Label" HorizontalAlignment="Left" Margin="97,223,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
                    <Label x:Name="lblHarga" Content="Label" HorizontalAlignment="Left" Margin="37,266,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
                    <Button x:Name="btnTambah" Content="Button" HorizontalAlignment="Left" Margin="142,271,0,0" VerticalAlignment="Top" Width="75" FontSize="14"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
